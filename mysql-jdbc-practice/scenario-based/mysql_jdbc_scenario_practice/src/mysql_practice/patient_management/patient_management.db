PATIENT_MANAGEMENT
===========================

> [[ patient_info ]] (table with patient information)

Create Table patient_info(
	id int Primary key auto_increment,
    name varchar(50),
    dobb date,
    phone varchar(10) unique,
    email varchar(50) unique,
    address varchar(100),
    blood_group varchar(10)
);

=================================

> [[doctors]] (table with doctor information)

create table doctors(
	id int primary key auto_increment,
    name varchar(50),
    email varchar(50) unique,
    phone varchar(10) unique,
    sepcialty varchar(30) 
);

=================================

> [[appointments]] (table with appointment information)

CREATE TABLE appointments(
	appointment_id INT PRIMARY KEY AUTO_INCREMENT,
   patient_id INT ,
    doctor_id INT,
    appointment_date DATE,
    appoitment_time TIME,
    status ENUM("completed","pending","cancelled"),
    CONSTRAINT patient_fk FOREIGN KEY (patient_id) REFERENCES patient_info(id),
    CONSTRAINT doctor_fk FOREIGN KEY (doctor_id) REFERENCES doctors(id)
  
);

=================================

> [[visits]] (table with visit information)

CREATE TABLE visits (
    id INT PRIMARY KEY AUTO_INCREMENT,
    appointment_id INT NOT NULL,
    diagnosis VARCHAR(100) NOT NULL,
    notes TEXT,
    visit DATE,
    CONSTRAINT fk FOREIGN KEY (appointment_id) REFERENCES appointments(appointment_id)
);


